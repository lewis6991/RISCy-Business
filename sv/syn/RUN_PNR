#!/bin/tcsh

#------------------------------------------------------------------------------
# File              : RUN_PNR
# Description       : Tcsh script to run a Place & Route
# Primary Author    : Dominic Murphy
# Other Contributors:
#------------------------------------------------------------------------------

if ($1 == clean) then
    ls work *.log >&/dev/null
    if ($? != 0) then
        echo "Already clean!"
    else
        rm ./*.log
        rm -rf work
        echo "Cleaned!"
    endif
    exit
endif

source SOC_Setup.sh

mkdir -p work
cd work >&/dev/null

velocity -init ../pnr_script.tcl > ../pnr.log
echo "Complete. Results written to pnr.log"
exit
